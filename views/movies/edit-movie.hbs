<h2>Edit Movie: {{oneMovie.title}}</h2>

<form action="/movies/{{oneMovie._id}}" method="post">
    <label for="title">Title<input type="text" name="title" placeholder="{{oneMovie.title}}"></label>
    <label for="genre">Genre<input type="text" name="genre" placeholder="{{oneMovie.genre}}"></label>
    <label for="plot">Plot<textarea name="plot" placeholder="{{oneMovie.plot}}"></textarea></label>
    <label for="cast">cast
    <select name="cast" multiple>
        {{#each allCelebrities}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select></label>
    <button type="submit">Submit</button>
</form>
